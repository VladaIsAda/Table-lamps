{{>header}}

<main>

    <section class="py-5 text-center container">

{{#lamp}}
            <div class="d-flex justify-content-start"><h2>Настольная лампа {{name}}</h2></div>

                <div class="row">
                    <div class="col-xl-4">
                        <img src="/img/{{image}}" class="mt-3" alt="" width="100%" height="300" style="object-fit: contain">
                    </div>
                    <div class="col-xl-5 offset-1">
                            <table class="table table-borderless">
                                <thead>
                                <tr class="d-flex justify-content-start">
                                    <th><h3>{{price}}<span class="text-muted h5"> р.</span></h3></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="d-flex justify-content-start">Стойка</td>
                                    <td >{{stand}}</td>
                                </tr>
                                <tr>
                                    <td class="d-flex justify-content-start">Материал каркаса</td>
                                    <td >{{material}}</td>
                                </tr>
                                <tr>
                                    <td class="d-flex justify-content-start">Тип питания</td>
                                    <td>{{power_type}}</td>
                                </tr>
                                <tr>
                                    <td class="d-flex justify-content-start">Высота</td>
                                    <td>{{height}} см</td>
                                </tr>
                                </tbody>
                            </table>

                        <form action="/lampList/lampPage/{{id}}" method="post" enctype="multipart/form-data" class="needs-validation" novalidate="">
                            <button class="w-100 btn btn-danger btn-lg" type="submit">Удалить</button>
                        </form>
                        <a class="w-100 btn btn-primary btn-lg mt-3" href="/lampList/lampPage/{{id}}/edit" role="button">Изменить</a>
                </div>
                    <div class="col-xl-2"></div>
                </div>
{{/lamp}}

    </section>
</main>
{{>footer}}